<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Edit Profil</h1>
      </div>
      <!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Edit Profil</li>
        </ol>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<div class="content">
  <div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">Edit Here</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form role="form">
      <div class="card-body">
        <div class="form-group">
          <label for="inputNameEditProfil">Nama pengguna</label>
          <input
            type="text"
            class="form-control"
            id="inputNameEditProfil"
            placeholder="Edit Namamu"
            name="nama"
          />
        </div>

        <div class="form-group">
          <label for="inputEmailEditProfil">Email pengguna</label>
          <input
            type="email"
            class="form-control"
            id="inputEmailEditProfil"
            placeholder="Edit emailmu"
            name="email"
          />
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Role</label>
          <input
            type="text"
            class="form-control"
            id="roleEditProfil"
            value="Admin"
            disabled
          />
        </div>
        <div class="form-group">
          <label for="exampleInputFile">Photo profil</label>
          <div class="input-group">
            <div class="custom-file">
              <input
                type="file"
                class="custom-file-input"
                id="exampleInputFile"
              />
              <label class="custom-file-label" for="exampleInputFile"
                >Choose file</label
              >
            </div>
            <div class="input-group-append">
              <span class="input-group-text" id="">Upload</span>
            </div>
          </div>
        </div>
      </div>
      <!-- /.card-body -->

      <div class="card-footer">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
</div>
